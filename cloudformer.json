        }
      }
    },
    "Route1": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "DestinationCidrBlock": "0.0.0.0/0",
        "RouteTableId": {
          "Ref": "RouteTable2"
        },
        "GatewayId": {
          "Ref": "InternetGateway"
        }
      },
