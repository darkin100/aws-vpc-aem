    },
    "1aPublisherStagingAclAss": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        },
        "SubnetId": {
          "Ref": "1aPublisherStagingSubnet"
        }
      }
    },
    "1bPublisherStagingAclAss": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        },
        "SubnetId": {
          "Ref": "1bPublisherStagingSubnet"
        }
      }
